.underline {
  border-bottom: solid 1px #D1D1D1;
}
.border-right {
  border-right: solid 1px #D1D1D1;
}
.filter {
  width: 100%;
  height: 100rpx;
}
.filter .selection {
  margin-top: 15rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 49.6%;
  display: inline-block;
  text-align: center;
  color: #FF4343;
}
.form {
  width: 100%;
  border-top: solid 1px #D1D1D1;
  border-bottom: solid 1px #D1D1D1;
}
.form .row {
  width: 95%;
  float: right;
  height: 114rpx;
}
.form .row label {
  line-height: 114rpx;
  float: left;
}
.form .row input {
  height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.form .row picker {
  height: 114rpx;
  line-height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.form .row .info-divider {
  text-align: right;
  float: right;
  height: 114rpx;
  line-height: 114rpx;
  width: 40rpx;
  text-align: center;
}
.list {
  width: 100%;
  border-top: solid 1px #D1D1D1;
}
.list .row {
  width: 100%;
  float: right;
  height: 114rpx;
}
.list .row input {
  margin-left: 5%;
  height: 114rpx;
  text-align: left;
  float: left;
}
.list .row .delete-btn {
  width: 100rpx;
  height: 114rpx;
  float: right;
  background: red;
}
.list .row label {
  margin-left: 5%;
  line-height: 114rpx;
  float: left;
}
.list .row .selector {
  width: 100rpx;
  height: 100%;
  margin-right: 5%;
  line-height: 114rpx;
  float: right;
}
.logo {
  margin-top: 20rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
}
.bottom-row {
  height: 110rpx;
  line-height: 110rpx;
  width: 100%;
  border-top: solid 1px #D1D1D1;
  position: absolute;
  bottom: 0;
  font-size: 35rpx;
}
.bottom-row .info {
  float: left;
  width: 69%;
  height: 100%;
  text-indent: 50rpx;
}
.bottom-row .btn {
  float: right;
  width: 30%;
  height: 100%;
  background-color: #FF4343;
  text-align: center;
  color: white;
}
.std-button {
  width: 100%;
  margin-top: 30rpx;
}
.std-button .bind-user {
  background-color: #FF4343;
  color: white;
  width: 90%;
  height: 90rpx;
}
.edit-merch-main .top-logo {
  height: 220rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
.edit-merch-main .form {
  margin-top: 40rpx;
}
.edit-merch-main .std-tags {
  height: 100%;
  display: flex;
  align-items: center;
  float: right;
  margin-right: 5%;
}
.edit-merch-main .std-tags .tag {
  margin-right: 10rpx;
  float: right;
  border: 1px solid #FFA32C;
  text-align: center;
  border-radius: 3px;
  height: 30rpx;
  line-height: 30rpx;
  width: 110rpx;
  font-size: 24rpx;
}
.edit-merch-main .std-tags .tag text {
  color: #FFA32C;
}
