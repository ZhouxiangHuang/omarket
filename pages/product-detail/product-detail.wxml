<view class="product-detail-main container">

    <swiper class="img underline" indicator-dots="true" autoplay="true" interval="5000" duration="1000">    
      <block wx:for="{{productImages}}" wx:for-index="index">    
        <swiper-item>    
          <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>    
        </swiper-item>    
      </block>    
    </swiper>   

    <view class="product-info">
        <view class="top">
            <view class="left">
                ￥{{productInfo.price}}
            </view>
            <view class="right">分享</view>            
        </view>
        <view class="low">
            <view class="left">
                <view class="name">           
                    <image wx:if="{{productInfo.hot_item}}" src="/images/hot.png" class="fire"/>
                    <text>{{productInfo.name}}</text>
                </view>
                <view class="code">商品编码{{productInfo.product_unique_code}}</view>             
            </view>                    
            <view class="button" bindtap="collect" wx:if="{{!isMerchant}}">
                <image wx:if="{{!isCollected}}" class="heart" mode="aspectFit" src="/images/empty-star.png"/>
                <image wx:if="{{isCollected}}" class="heart" mode="aspectFit" src="/images/star.png"/>                
                <text>收藏</text>
            </view>     
        </view>            
        <view class="description">{{productInfo.description}}</view>   
    </view>                    
    <view class="bottom-row">
        <view wx:if="{{!isOwner}}" class="info">已关注{{collectionCount}}款商品</view>
        <view wx:if="{{!isOwner}}" class="btn" bindtap="checkCollections">收藏夹</view>
        <view wx:if="{{isOwner}}" class="btn" bindtap="edit">编辑</view>              
    </view>
</view>