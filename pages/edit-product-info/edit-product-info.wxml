<view class="edit-product-main container">
    <view class="product-images">
        <image class="product-image" src="{{item}}" bindtap="chooseImage" wx:for="{{productImages}}" wx:key="{{productImages}}"/>
        <image class="product-image" bindtap="chooseImage"/>    
    </view>
    <form class="form">
        <view class='row underline'>
            <label>产品类别</label>
            <image class="selector" src="/images/selector.png" mode="right"></image>
            <picker bindchange="selectCategory" range = "{{categories}}" value="{{categoryIndex}}" range-key="name">
                <view value="jeans">{{categories[categoryIndex].name}}</view>
            </picker>
        </view>
         <view class='row underline'>
            <label>产品编码</label>
            <input type="string" bindinput="bindProductCode" placeholder="请输入产品编码"/>
        </view>
         <view class='row underline'>
            <label>产品名称</label>
            <input type="string" bindinput="bindProductName" placeholder="请输入产品名称"/>
        </view>
         <view class='row underline'>
            <label>价格</label>
            <input type="string" bindinput="bindPrice" placeholder="请输入产品价格"/>
        </view>
        <view class='row'>
            <label>热销</label>
        </view>
    </form>

    <view class='std-button'>
        <button class='bind-user' bindtap='submit'>保存</button>
    </view>
</view>