.underline {
  border-bottom: solid 1px #D1D1D1;
}
.form {
  width: 100%;
  border-top: solid 1px #D1D1D1;
  border-bottom: solid 1px #D1D1D1;
}
.form .row {
  width: 95%;
  float: right;
  height: 114rpx;
}
.form .row label {
  line-height: 114rpx;
  float: left;
}
.form .row input {
  height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.login-option-nav {
  border: 1px solid #43BB57;
  width: 500rpx;
  height: 60rpx;
  border-radius: 10px;
  color: white;
  text-align: center;
}
.login-option-nav #user {
  height: 100%;
  line-height: 60rpx;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  float: left;
  width: 50%;
  background: #43BB57;
}
.login-option-nav #merchant {
  color: #43BB57;
  height: 100%;
  line-height: 60rpx;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  text-align: center;
  float: right;
  width: 50%;
}
#register-form {
  margin-top: 30rpx;
}
.register-button {
  width: 100%;
  margin-top: 30rpx;
}
.register-button .bind-user {
  background-color: #43BB57;
  color: white;
  width: 90%;
  height: 90rpx;
}
