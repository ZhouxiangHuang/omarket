.underline {
  border-bottom: solid 1px #D1D1D1;
}
.border-right {
  border-right: solid 1px #D1D1D1;
}
.filter {
  width: 100%;
  height: 100rpx;
}
.filter .selection {
  margin-top: 15rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 49.6%;
  display: inline-block;
  text-align: center;
  color: #43BB57;
}
.form {
  width: 100%;
  border-top: solid 1px #D1D1D1;
  border-bottom: solid 1px #D1D1D1;
}
.form .row {
  width: 95%;
  float: right;
  height: 114rpx;
}
.form .row label {
  line-height: 114rpx;
  float: left;
}
.form .row input {
  height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.form .row picker {
  height: 114rpx;
  line-height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.logo {
  margin-top: 20rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
}
.bottom-row {
  height: 110rpx;
  line-height: 110rpx;
  width: 100%;
  border-top: solid 1px #D1D1D1;
  position: absolute;
  bottom: 0;
  font-size: 35rpx;
}
.bottom-row .info {
  float: left;
  width: 69%;
  height: 100%;
  text-indent: 50rpx;
}
.bottom-row .btn {
  float: right;
  width: 30%;
  height: 100%;
  background-color: #43BB57;
  text-align: center;
  color: white;
}
.std-button {
  width: 100%;
  margin-top: 30rpx;
}
.std-button .bind-user {
  background-color: #43BB57;
  color: white;
  width: 90%;
  height: 90rpx;
}
.login-option-nav {
  border: 1px solid #43BB57;
  width: 500rpx;
  height: 60rpx;
  border-radius: 10px;
  color: white;
  text-align: center;
}
.login-option-nav #user {
  height: 100%;
  line-height: 60rpx;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  float: left;
  width: 50%;
  background: #43BB57;
}
.login-option-nav #merchant {
  color: #43BB57;
  height: 100%;
  line-height: 60rpx;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  text-align: center;
  float: right;
  width: 50%;
}
#register-form {
  margin-top: 30rpx;
}
.register-button {
  width: 100%;
  margin-top: 30rpx;
}
.register-button .bind-user {
  background-color: #43BB57;
  color: white;
  width: 90%;
  height: 90rpx;
}
/**index.wxss**/
.userinfo {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
