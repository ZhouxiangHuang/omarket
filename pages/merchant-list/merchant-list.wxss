.underline {
  border-bottom: solid 1px #D1D1D1;
}
.border-right {
  border-right: solid 1px #D1D1D1;
}
.filter {
  width: 100%;
  height: 100rpx;
}
.filter .selection {
  margin-top: 15rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 49.6%;
  display: inline-block;
  text-align: center;
  color: #43BB57;
}
.form {
  width: 100%;
  border-top: solid 1px #D1D1D1;
  border-bottom: solid 1px #D1D1D1;
}
.form .row {
  width: 95%;
  float: right;
  height: 114rpx;
}
.form .row label {
  line-height: 114rpx;
  float: left;
}
.form .row input {
  height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.form .row picker {
  height: 114rpx;
  line-height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.logo {
  margin-top: 20rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
}
.bottom-row {
  height: 110rpx;
  line-height: 110rpx;
  width: 100%;
  border-top: solid 1px #D1D1D1;
  position: absolute;
  bottom: 0;
  font-size: 35rpx;
}
.bottom-row .info {
  float: left;
  width: 69%;
  height: 100%;
  text-indent: 50rpx;
}
.bottom-row .btn {
  float: right;
  width: 30%;
  height: 100%;
  background-color: #43BB57;
  text-align: center;
  color: white;
}
.std-button {
  width: 100%;
  margin-top: 30rpx;
}
.std-button .bind-user {
  background-color: #43BB57;
  color: white;
  width: 90%;
  height: 90rpx;
}
.filter {
  border-top: solid 1px #D1D1D1;
}
.merchant {
  width: 100%;
  min-height: 220rpx;
}
.merchant .merchant-info {
  width: 100%;
  height: 200rpx;
}
.merchant .merchant-info .merchant-logo {
  margin-left: 15rpx;
  float: left;
  width: 200rpx;
  height: 100%;
  display: flex;
  justify-content: center;
}
.merchant .merchant-info .merchant-logo .logo {
  margin-top: 20rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 10px;
}
.merchant .merchant-info .merchant-profile {
  margin-top: 20rpx;
  margin-right: 30rpx;
  float: right;
  width: 500rpx;
  height: 100rpx;
}
.merchant .merchant-info .merchant-profile .merchant-name {
  font-size: 38rpx;
  display: inline-block;
}
.merchant .merchant-info .merchant-profile .merchant-address {
  display: inline-block;
  font-size: 24rpx;
  color: #979797;
}
.merchant .merchant-info .merchant-profile .merchant-announcement .announcement-icon {
  display: inline-block;
  font-size: 24rpx;
  width: 60rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  border-radius: 3px;
  color: white;
  background-color: #35B4EF;
}
.merchant .merchant-info .merchant-profile .merchant-announcement .announcement-content {
  margin-left: 10rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #979797;
}
.merchant .merchant-info .merchant-profile .tags {
  margin-top: 15rpx;
}
.merchant .merchant-info .merchant-profile .tags .tag {
  margin-right: 10rpx;
  float: left;
  border: 1px solid #FFA32C;
  text-align: center;
  border-radius: 3px;
  height: 30rpx;
  line-height: 30rpx;
  width: 110rpx;
  font-size: 24rpx;
}
.merchant .merchant-info .merchant-profile .tags .tag text {
  color: #FFA32C;
}
.merchant .merchant-products {
  height: 230rpx;
  width: 100%;
}
.merchant .merchant-products .product-image {
  float: left;
  width: 203rpx;
  height: 203rpx;
  margin-left: 34rpx;
  border: solid 1px #D1D1D1;
}
