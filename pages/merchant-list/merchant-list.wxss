.underline {
  border-bottom: solid 1px #D1D1D1;
}
.underline-light {
  border-bottom: #E6E5F4;
}
.border-right {
  border-right: solid 1px #D1D1D1;
}
.filter {
  background-color: white;
  width: 100%;
  height: 100rpx;
}
.filter .selection {
  margin-top: 15rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 49.6%;
  display: inline-block;
  text-align: center;
  color: #FF9E9E;
}
.filter .selection .selector {
  width: 20rpx;
  height: 15rpx;
  float: right;
  margin-right: 100rpx;
  margin-top: 30rpx;
}
.filter .selection text {
  margin-left: 100rpx;
}
.form {
  width: 100%;
  border-top: solid 1px #D1D1D1;
  border-bottom: solid 1px #D1D1D1;
}
.form .row {
  width: 95%;
  float: right;
  height: 114rpx;
}
.form .row .icon {
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
  margin-right: 20rpx;
}
.form .row label {
  line-height: 114rpx;
  float: left;
}
.form .row input {
  height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
  width: 250rpx;
}
.form .row .text-content {
  height: 114rpx;
  text-align: right;
  float: right;
  line-height: 114rpx;
  margin-right: 5%;
  max-width: 200rpx;
}
.form .row .select-icon {
  width: 20rpx;
  height: 30rpx;
  margin-top: 42rpx;
  margin-right: 5%;
  float: right;
}
.form .row .categoy-picker {
  height: 114rpx;
  line-height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.form .row .time-picker {
  height: 114rpx;
  line-height: 114rpx;
  text-align: right;
  float: right;
  margin-right: 5%;
}
.form .row .info-divider {
  text-align: right;
  float: right;
  height: 114rpx;
  line-height: 114rpx;
  width: 40rpx;
  text-align: center;
}
.form .row .selector {
  width: 30rpx;
  height: 100%;
  margin-right: 5%;
  line-height: 114rpx;
  float: right;
}
.form .row #announcement {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.list {
  width: 100%;
  border-top: solid 1px #D1D1D1;
}
.list .row {
  width: 100%;
  float: right;
  height: 114rpx;
}
.list .row input {
  margin-left: 5%;
  height: 114rpx;
  text-align: left;
  float: left;
}
.list .row .delete-btn {
  width: 40rpx;
  height: 40rpx;
  margin-top: 37rpx;
  margin-right: 20rpx;
  float: right;
}
.list .row label {
  margin-left: 5%;
  line-height: 114rpx;
  float: left;
}
.list .row .selector {
  width: 100rpx;
  height: 100%;
  margin-right: 5%;
  line-height: 114rpx;
  float: right;
}
.logo {
  margin-top: 20rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10px;
}
.bottom-row {
  height: 110rpx;
  line-height: 110rpx;
  width: 100%;
  border-top: solid 1px #D1D1D1;
  position: absolute;
  bottom: 0;
  font-size: 35rpx;
}
.bottom-row .info {
  float: left;
  width: 69%;
  height: 100%;
  text-indent: 50rpx;
}
.bottom-row .btn {
  float: right;
  width: 30%;
  height: 100%;
  background-color: #FF4343;
  text-align: center;
  color: white;
}
.std-button {
  width: 100%;
  margin-top: 30rpx;
}
.std-button .bind-user {
  background-color: #FF4343;
  color: white;
  width: 90%;
  height: 90rpx;
}
.filter {
  border-top: solid 1px #D1D1D1;
}
.merchant-list {
  height: 1010rpx;
  background-color: #F8F8F8;
}
.merchant {
  background-color: white;
  width: 100%;
  min-height: 220rpx;
  margin-bottom: 20rpx;
}
.merchant .merchant-info {
  width: 100%;
  height: 190rpx;
}
.merchant .merchant-info .merchant-logo {
  margin-left: 15rpx;
  float: left;
  width: 200rpx;
  height: 100%;
  display: flex;
  justify-content: center;
}
.merchant .merchant-info .merchant-logo .logo {
  margin-top: 20rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 10px;
}
.merchant .merchant-info .merchant-profile {
  margin-top: 20rpx;
  margin-right: 30rpx;
  float: right;
  width: 500rpx;
  height: 100rpx;
}
.merchant .merchant-info .merchant-profile .merchant-name {
  font-size: 30rpx;
  display: inline-block;
}
.merchant .merchant-info .merchant-profile .merchant-address {
  display: inline-block;
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #979797;
}
.merchant .merchant-info .merchant-profile .enter {
  float: right;
  margin-left: 10rpx;
  font-size: 22rpx;
  border-radius: 20px;
  width: 80rpx;
  text-align: center;
  color: #FF4343;
  border: 1px solid #FF4343;
}
.merchant .merchant-info .merchant-profile .merchant-announcement {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.merchant .merchant-info .merchant-profile .merchant-announcement .announcement-icon {
  display: inline-block;
  font-size: 24rpx;
  width: 60rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  border-radius: 3px;
  color: white;
  background-color: #35B4EF;
}
.merchant .merchant-info .merchant-profile .merchant-announcement .announcement-content {
  color: #FF4343;
  margin-left: 10rpx;
  font-size: 24rpx;
  width: 350rpx;
}
.merchant .merchant-info .merchant-profile .tags {
  margin-top: 10rpx;
}
.merchant .merchant-info .merchant-profile .tags .tag {
  margin-right: 10rpx;
  float: left;
  border: 1px solid #FFA32C;
  text-align: center;
  border-radius: 3px;
  height: 30rpx;
  line-height: 30rpx;
  min-width: 110rpx;
  font-size: 24rpx;
}
.merchant .merchant-info .merchant-profile .tags .tag text {
  color: #FFA32C;
}
.merchant .merchant-products {
  height: 230rpx;
  width: 100%;
}
.merchant .merchant-products .product-image {
  float: left;
  width: 203rpx;
  height: 203rpx;
  border-radius: 3px;
  margin-left: 34rpx;
  border: solid 1px #D1D1D1;
}
